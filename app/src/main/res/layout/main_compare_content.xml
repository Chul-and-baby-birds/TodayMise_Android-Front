        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/verybad_small"
            android:id="@+id/main_comp_iv4"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/main_comp_tv4"
            app:layout_constraintRight_toRightOf="@id/main_comp_tv4"
            app:layout_constraintLeft_toLeftOf="@id/main_comp_tv4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14ppm"
            android:textSize="14dp"
