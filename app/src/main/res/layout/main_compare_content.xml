            app:layout_constraintLeft_toLeftOf="@id/main_comp_tv3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14ppm"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:id="@+id/main_comp_tv3_2"
