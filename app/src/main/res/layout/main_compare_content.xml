        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_comp_content5"
        app:layout_constraintLeft_toRightOf="@id/main_comp_content1"
        app:layout_constraintRight_toLeftOf="@id/main_comp_content3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초미세먼지"
