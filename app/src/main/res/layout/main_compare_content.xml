            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14㎍/m"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:id="@+id/main_comp_tv2_2"
            app:layout_constraintTop_toBottomOf="@id/main_comp_iv2"
