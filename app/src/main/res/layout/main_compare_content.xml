        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/soso_small"
            android:id="@+id/main_comp_iv6"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/main_comp_tv6"
            app:layout_constraintRight_toRightOf="@id/main_comp_tv6"
            app:layout_constraintLeft_toLeftOf="@id/main_comp_tv6"/>

        <TextView
            android:layout_width="wrap_content"
